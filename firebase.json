{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    // Add the "rewrites" section within "hosting"
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ]
  }
}
